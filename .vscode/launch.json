{
    "configurations": [
        {
            "name": "Python Debugger: Run CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "generate",
                "--profile",
                ".ignore/my_profile.json",
                "-s",
                "senior software engineer",
                "-l",
                "Philadelphia",
                "-o",
                ".ignore/cover_letters",
                "--max-results",
                "5",
                "--format",
                "pdf",
                "--job-sites",
                "linkedin",
                "--match-threshold",
                "80"
            ],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
